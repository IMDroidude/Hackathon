<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TransCandidateProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CandidateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/backgroud_color"
        android:gravity="center">

        <!-- Rounded Image
         keep ID of this view: TC_Image
         -->

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:text="Candidate Name"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Age:"
            android:textColor="#4A148C"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_skils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:text="Skills:"
            android:textColor="#9C27B0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:text="Phone#:"
            android:textColor="#BA68C8"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_pas_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:text="Past Experience:"
            android:textColor="#CE93D8"
            android:textSize="20dp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="Select Candidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>

        <CheckBox
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/checkbox"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button" />
    </RelativeLayout>


</LinearLayout>